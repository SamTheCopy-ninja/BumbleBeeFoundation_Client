@model IEnumerable<BumbleBeeFoundation_Client.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-5">
   
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-4">
        <a asp-action="CreateUser" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Create New User
        </a>
        <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Role)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Role)</td>
                            <td class="text-center">
                                <a asp-action="EditUser" asp-route-id="@item.UserID"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="DeleteUser" asp-route-id="@item.UserID"
                                   class="btn btn-sm btn-danger">
                                    <i class="fas fa-user-slash"></i> Deactivate
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No users found. Click <strong>Create New User</strong> to add one.
        </div>
    }
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

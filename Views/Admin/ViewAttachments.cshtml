@model IEnumerable<AttachmentViewModel>

@{
    ViewData["Title"] = "View Attachments";
}

<link href="~/css/bumblebee-theme.css" rel="stylesheet" />

<h1 class="text-center company-management-title">Attachments</h1>

<div class="mb-3">
    <a asp-action="FundingRequestManagement" class="btn btn-secondary w-100">Back to List</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FileName)</th>
                <th>@Html.DisplayNameFor(model => model.UploadedAt)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FileName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UploadedAt)</td>
                    <td>
                        <a asp-action="DownloadAttachment" asp-route-attachmentId="@item.AttachmentID"
                           class="btn btn-primary btn-sm">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>